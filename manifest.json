{
  "manifest_version": 3,
  "name": "CoolGeePeeTee",
  "version": "0.3",
  "description": "Customize the look of your favorite AI chats, and more!",
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "css": [
        "styles.css"
      ],
      "js": [
        "scripts/htmx2.0.4.min.js",
        "scripts/jquery-3.7.1.min.js",
        "scripts/scripts1.js"
      ]
    }
  ],
  "permissions": [
    "activeTab"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "styles_cyberpunk.css",
        "styles_nature.css",
        "styles_minimalist.css",
        "styles_terminal.css",
        "styles_space.css",
        "styles_vintage.css",
        "styles_gaming.css",
        "styles_90s.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}